FROM ubuntu:16.04
RUN apt-get update && \
    apt-get install -y apt-transport-https \
                       ca-certificates \
                       curl \
                       software-properties-common \
                       build-essential \
                       git \
                       sudo \
                       libssl-dev \
                       libreadline6-dev \
                       zlib1g-dev \
                       openssh-server && \
    apt-get clean
# this value is same at text of default.pem.pub
ENV PUBLIC_KEY 'ssh-rsa  cloud9@dc6451299562'

RUN useradd cloud9 && \
    usermod -aG sudo cloud9 && \
    echo 'cloud9 ALL=NOPASSWD:ALL' > /etc/sudoers.d/cloud9 && \
    mkdir -p /home/cloud9/.ssh && \
    touch /home/cloud9/.ssh/authorized_keys && \
    echo "source .bashrc" > /home/cloud9/.profile && \
    echo "alias ls='ls --color'" > /home/cloud9/.bashrc && \
    chown -R cloud9:cloud9 /home/cloud9 && \
    chmod 600 /home/cloud9/.ssh/authorized_keys && \
    mkdir /var/run/sshd && \
    chsh -s /bin/bash cloud9 && \
    git clone https://github.com/riywo/anyenv /home/cloud9/.anyenv && \
    echo 'export PATH="$HOME/.anyenv/bin:$PATH"' >> /home/cloud9/.bashrc && \
    echo 'eval "$(anyenv init -)"' >> /home/cloud9/.bashrc && \
    echo 'alias upbash="source ~/.bashrc"' >> /home/cloud9/.bashrc && \
    echo 'alias upshell="exec $SHELL -l"' >> /home/cloud9/.bashrc

ADD sshd_config /etc/ssh/sshd_config
ADD init.sh /root/init.sh

EXPOSE 22

CMD ["bash", "/root/init.sh"]
